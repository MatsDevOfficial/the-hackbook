# .env.production.example
# Example environment variables for production

# Supabase Database (use pooler connection on port 6543 for serverless)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
REDIS_URL=

# HCA OAuth
HCA_CLIENT_ID=
HCA_CLIENT_SECRET=

# Slack bot token for profile sync
SLACK_BOT_TOKEN=

# Geocoding API (Hack Club service)
GEOCODER_API_KEY=


# Sentry error monitoring
SENTRY_DSN=
# Required for Active Record encryption
RAILS_MASTER_KEY=

# Supabase Storage (S3-compatible)
SUPABASE_S3_ACCESS_KEY=
SUPABASE_S3_SECRET_KEY=
SUPABASE_S3_ENDPOINT=https://[project-ref].supabase.co/storage/v1/s3
SUPABASE_REGION=eu-central-1
SUPABASE_BUCKET=hackbook-uploads

# Webreus Email (Action Mailer)
WEBREUS_EMAIL_USER=
WEBREUS_EMAIL_PASS=
MAILER_FROM=
APP_HOST=

# External API key for /api/v1 endpoints
EXTERNAL_API_KEY=

# Optional: URL to ping for uptime monitoring (e.g., BetterStack, UptimeRobot)
# UPTIME_WORKER_PING_URL=